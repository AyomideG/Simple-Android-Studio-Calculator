<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebeaea"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".CalcActivity">

    <TextView
        android:id="@+id/text_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="1+2"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/text_main2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:text="0"
        android:textSize="40sp" />


    <LinearLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_clear"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/background_light"
                android:text="c"
                android:textColor="@android:color/holo_red_light"
                android:textSize="40sp" />

            <Button
                android:id="@+id/bt_small_bracket"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/background_light"
                android:layout_marginLeft="1dp"
                android:text="( )"
                android:textColor="@color/colorPrimary"
                android:textSize="40sp" />

            <Button
                android:id="@+id/bt_percentage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/background_light"
                android:layout_marginLeft="1dp"
                android:text="%"
                android:textColor="@color/colorPrimary"
                android:textSize="40sp" />

            <Button
                android:id="@+id/bt_divide"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/background_light"
                android:layout_marginLeft="1dp"
                android:text="÷"
                android:textColor="@color/colorPrimary"
                android:textSize="40sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_seven"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/darker_gray"
                android:text="7"
                android:textColor="@android:color/background_light"
                android:textSize="40sp" />

            <Button
                android:id="@+id/bt_eight"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/darker_gray"
                android:text="8"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="1dp"
                android:textSize="40sp" />

            <Button
                android:id="@+id/bt_nine"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/darker_gray"
                android:text="9"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="1dp"
                android:textSize="40sp" />

            <Button
                android:id="@+id/bt_multiply"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/background_light"
                android:layout_marginLeft="1dp"
                android:text="×"
                android:textColor="@color/colorPrimary"
                android:textSize="40sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_four"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/darker_gray"
                android:text="4"
                android:textColor="@android:color/background_light"
                android:textSize="40sp" />

            <Button
                android:id="@+id/bt_five"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/darker_gray"
                android:text="5"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="1dp"
                android:textSize="40sp" />

            <Button
                android:id="@+id/bt_six"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/darker_gray"
                android:text="6"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="1dp"
                android:textSize="40sp" />

            <Button
                android:id="@+id/bt_minus"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/background_light"
                android:layout_marginLeft="1dp"
                android:text="−"
                android:textColor="@color/colorPrimary"
                android:textSize="40sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_one"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/darker_gray"
                android:text="1"
                android:textColor="@android:color/background_light"
                android:textSize="40sp" />

            <Button
                android:id="@+id/bt_two"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/darker_gray"
                android:text="2"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="1dp"
                android:textSize="40sp" />

            <Button
                android:id="@+id/bt_three"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/darker_gray"
                android:text="3"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="1dp"
                android:textSize="40sp" />

            <Button
                android:id="@+id/bt_plus"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/background_light"
                android:layout_marginLeft="1dp"
                android:text="+"
                android:textColor="@color/colorPrimary"
                android:textSize="40sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_dot"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/background_light"
                android:text="."
                android:textColor="@color/colorPrimary"
                android:textSize="40sp" />

            <Button
                android:id="@+id/bt_zero"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/darker_gray"
                android:text="0"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="1dp"
                android:textSize="40sp" />

            <Button
                android:id="@+id/bt_back"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/background_light"
                android:layout_marginLeft="1dp"
                android:text="BK"
                android:textColor="@color/colorPrimary"
                android:textSize="40sp" />

            <Button
                android:id="@+id/bt_equal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorPrimary"
                android:text="="
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="1dp"
                android:textSize="40sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>